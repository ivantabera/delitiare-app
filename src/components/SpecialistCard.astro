---
// src/components/SpecialistCard.astro
interface Props {
  id: string;      // Identificador Ãºnico (ej: "tess")
  name: string;    // Nombre visible (ej: "Tess")
  image: string;   // Ruta de la foto
}

const { id, name, image } = Astro.props;
---

<a href={`/especialistas/${id}`} class="card reveal specialist-card" style="display:block; padding:0; border:none; text-decoration:none; overflow:hidden; cursor:pointer;">
  <div style="padding: 16px;">
    <div style="aspect-ratio:3/4; border-radius:14px; background:linear-gradient(180deg,rgba(42,58,52,.8),rgba(14,15,18,.9)); overflow:hidden; position:relative;">
      <img src={image} alt={`Especialista ${name}`} style="width:100%; height:100%; object-fit:cover; display:block;" loading="lazy" />
    </div>
    
    <div style="display:flex; justify-content:space-between; align-items:center; margin-top:16px">
      <strong class="font-display" style="font-size: 20px; letter-spacing:.02em; color: var(--ivory);">{name}</strong>
      <span class="badge"><p class="font-display" style="letter-spacing:.02em; margin:0; color: var(--champagne);">Ver perfil</p></span>
    </div>
  </div>
</a>